// 14. Average of array
function average(arr) {
  let sum = 0;
  for (let num of arr) {
    sum += num;
  }
  return sum / arr.length;
}
// 15. Reverse string
function reverseString(str) {
  return str.split("").reverse().join("");
}
// 16. Celsius to Fahrenheit
function convertToFahrenheit(celsius) {
  return (celsius * 9/5) + 32;
}
// 17. Check age category
function checkAge(age) {
  if (age < 13) {
    console.log("Child");
  } else if (age <= 19) {
    console.log("Teenager");
  } else {
    console.log("Adult");
  }
}
// 18. Count vowels
function countVowels(str) {
  let count = 0;
  let vowels = "aeiouAEIOU";

  for (let char of str) {
    if (vowels.includes(char)) {
      count++;
    }
  }
  return count;
}
// 19. Calculator
function calculate(a, b, operator) {
  switch (operator) {
    case "+": return a + b;
    case "-": return a - b;
    case "*": return a * b;
    case "/": return a / b;
    case "%": return a % b;
    default: return "Invalid operator";
  }
}
// 20. Divisibility check
function isDivisible(num, divisor) {
  return num % divisor === 0;
}
// 21. Sum of array using for loop
function sumArray(arr) {
  let sum = 0;
  for (let i = 0; i < arr.length; i++) {
    sum += arr[i];
  }
  return sum;
}
// 22. Check password strength
function checkPassword(password) {
  return password.length >= 8 ? "Strong" : "Weak";
}
// 23. Fahrenheit to Celsius
function fahrenheitToCelsius(f) {
  return (f - 32) * 5/9;
}
// 24. Swap values
function swap(a, b) {
  let temp = a;
  a = b;
  b = temp;
  return [a, b];
}
// 25. Prime number check
function isPrime(num) {
  if (num <= 1) return false;

  for (let i = 2; i <= Math.sqrt(num); i++) {
    if (num % i === 0) return false;
  }
  return true;
}


